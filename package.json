{
  "name": "@kadaliao/geektime-downloader",
  "version": "1.1.5",
  "description": "极客时间专栏文章批量下载工具 - 支持一键下载整个专栏为PDF或EPUB",
  "type": "module",
  "main": "download.js",
  "bin": {
    "geektime-dl": "download.js"
  },
  "scripts": {
    "start": "node download.js",
    "test": "node download.js --dry-run",
    "postinstall": "npx playwright install chromium --with-deps || echo '⚠️  Playwright安装失败，请手动运行: npx playwright install chromium'"
  },
  "keywords": [
    "geektime",
    "downloader",
    "pdf",
    "epub",
    "ebook",
    "crawler",
    "极客时间"
  ],
  "author": "liaoxingyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadaliao/geektime-downloader.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@lillallol/outline-pdf": "^4.0.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.1.2",
    "commander": "^11.1.0",
    "epub-gen-memory": "^1.1.2",
    "mime-types": "^3.0.2",
    "ora": "^8.0.1",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.40.0",
    "sharp": "^0.34.5"
  }
}
